<% @title = @issue.title %>
<html>
  <head>
    <title></title>
  </head>
  <body>
    <div class='panel radius'>
      <h4><%= @issue.title %></h4>
      <p><img src="<%= @issue.image_url %>" class='float-right' width='160'></p>
      <dl>
        <dt>Writer(s) </dt>
        <dd><%= @issue.writers %></dd>
      </dl>
      <dl>
        <dt>Artist(s)</dt>
        <dd><%= @issue.artist %></dd>
      </dl>
      <dl>
        <dt>Publisher </dt>
        <dd><%= @issue.publisher %></dd>
      </dl>
      <dl>
        <dt>Description</dt>
        <dd><%= @issue.description %></dd>
      </dl>
    </div>
  </html>